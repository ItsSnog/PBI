*
	padding 0
	margin 0
	box-sizing border-box
body
	font-family sans-serif
nav
	display flex
	flex-wrap wrap
	justify-content center
	.logo
		width 30%
		img
			width 200px
			margin-left 50px
	.menu
		width 70%
		text-align right
		ul
			margin-right 50px
			li
				list-style none
				margin 20px 25px 0 0;
				display inline-block
				line-height 80px
				i:hover
					color #2d89ef
					cursor pointer
				a
					text-decoration none
					color grey
					&:hover
						color #2d89ef
			.active
				a
					color #2d89ef
					

		